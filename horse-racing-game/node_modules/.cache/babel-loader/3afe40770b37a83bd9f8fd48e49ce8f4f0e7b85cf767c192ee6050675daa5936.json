racing-game/src/components/ControlButtons.vue"],"sourcesContent":["<template>\n  <div>\n    <div class=\"control-buttons\">\n      <button @click=\"handleGenerateScheduleClick\" class=\"btn\">GENERATE PROGRAM</button>\n      <button @click=\"handleStartRaceClick\" class=\"btn\">START/PAUSE</button>\n    </div>\n    <div v-if=\"showSchedule\">\n      <race-schedule></race-schedule>\n    </div>\n    <div v-if=\"showResults\">\n      <race-results></race-results>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { mapState } from 'vuex';\nimport RaceSchedule from './RaceSchedule.vue'; // Dosya yolu doğru şekilde ayarlandı\nimport RaceResults from './RaceResults.vue'; // Dosya yolu doğru şekilde ayarlandı\n\nexport default {\n  components: {\n    RaceSchedule,\n    RaceResults\n  },\n  computed: {\n    ...mapState(['showSchedule', 'showResults'])\n  },\n  methods: {\n    handleGenerateScheduleClick() {\n      // Yarış programını oluştur\n      const schedule = generateRaceSchedule(this.$store.state.horses, 6); // 6 yarıştan oluşan bir program oluştur\n      this.$store.commit('setRaceSchedule', schedule);\n      this.$store.commit('setShowSchedule', true);\n      this.$store.commit('setShowResults', false);\n    },\n    handleStartRaceClick() {\n      // Yarışları başlat\n      const schedule = this.$store.state.raceSchedule;\n      if (schedule.length === 0) {\n        alert('Please generate a race schedule first.');\n        return;\n      }\n      this.$store.commit('clearRaceResults');\n      this.runRaces(schedule, 0);\n    },\n    runRaces(schedule, index) {\n      if (index >= schedule.length) {\n        // Tüm yarışlar tamamlandı, sonuçları göster\n        this.$store.commit('setShowSchedule', false);\n        this.$store.commit('setShowResults', true);\n        return;\n      }\n      const race = schedule[index];\n      setTimeout(() => {\n        race.horses.forEach(horse => {\n          const newPosition = horse.position + Math.random() * 10;\n         