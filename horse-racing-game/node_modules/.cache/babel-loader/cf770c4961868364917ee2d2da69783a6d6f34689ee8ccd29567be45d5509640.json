{"ast":null,"code":"import { mapState, mapActions } from 'vuex';\nexport default {\n  name: 'HorseRace',\n  computed: {\n    ...mapState(['raceSchedule'])\n  },\n  mounted() {\n    this.generateHorses();\n    this.startRace();\n  },\n  methods: {\n    ...mapActions(['generateHorses', 'startRace']),\n    startRace() {\n      this.raceSchedule.forEach(race => {\n        race.horses.forEach(horse => {\n          horse.speed = this.calculateSpeed(horse.condition);\n          horse.position = this.getInitialPosition();\n          setTimeout(() => {\n            horse.position = 100;\n          }, 100);\n        });\n      });\n    },\n    calculateSpeed(condition) {\n      // Atların kondisyonuna göre hız hesapla (daha iyi kondisyon, daha yüksek hız)\n      return 5 / condition; // örnek hız hesaplama, bu değeri istediğiniz gibi ayarlayabilirsiniz\n    },\n    getInitialPosition() {\n      // Başlangıç pozisyonlarını ayarla (bu örnekte tüm atlar başlangıçta 0'dan başlıyor)\n      return 0;\n    }\n  }\n};","map":{"version":3,"names":["mapState","mapActions","name","computed","mounted","generateHorses","startRace","methods","raceSchedule","forEach","race","horses","horse","speed","calculateSpeed","condition","position","getInitialPosition","setTimeout"],"sources":["/Users/aleynakoluk/Desktop/horse-racing-game/src/components/HorseRace.vue"],"sourcesContent":["<template>\n  <div class=\"race-results\">\n    <div v-for=\"(race, index) in raceSchedule\" :key=\"index\" class=\"race-section\">\n      <h3>{{ index + 1 }}. Race - {{ race.distance }}m</h3>\n      <div class=\"race-track\">\n        <div class=\"finish-line\">FINISH</div>\n        <div class=\"lanes\">\n          <div class=\"lane\" v-for=\"(lane, laneIndex) in 10\" :key=\"laneIndex\">\n            <div\n              v-for=\"(horse, horseIndex) in race.horses.slice(laneIndex * 1, (laneIndex * 1) + 1)\"\n              :key=\"horseIndex\"\n              class=\"horse\"\n              :style=\"{ left: horse.position + '%', transitionDuration: horse.speed + 's' }\"\n            >\n              <img :src=\"horse.image\" :alt=\"'Horse ' + horse.id\">\n              <span>Horse {{ horse.id }}</span>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { mapState, mapActions } from 'vuex';\n\nexport default {\n  name: 'HorseRace',\n  computed: {\n    ...mapState(['raceSchedule']),\n  },\n  mounted() {\n    this.generateHorses();\n    this.startRace();\n  },\n  methods: {\n    ...mapActions(['generateHorses', 'startRace']),\n    startRace() {\n      this.raceSchedule.forEach((race) => {\n        race.horses.forEach((horse) => {\n          horse.speed = this.calculateSpeed(horse.condition);\n          horse.position = this.getInitialPosition();\n          setTimeout(() => {\n            horse.position = 100;\n          }, 100);\n        });\n      });\n    },\n    calculateSpeed(condition) {\n      // Atların kondisyonuna göre hız hesapla (daha iyi kondisyon, daha yüksek hız)\n      return 5 / condition; // örnek hız hesaplama, bu değeri istediğiniz gibi ayarlayabilirsiniz\n    },\n    getInitialPosition() {\n      // Başlangıç pozisyonlarını ayarla (bu örnekte tüm atlar başlangıçta 0'dan başlıyor)\n      return 0;\n    }\n  },\n};\n</script>\n\n<style scoped>\n.race-results {\n  display: flex;\n  flex-wrap: wrap;\n  gap: 20px;\n  justify-content: center;\n  align-items: flex-start;\n}\n\n.race-section {\n  flex: 1;\n  max-width: 400px;\n  padding: 20px;\n  background-color: #fff;\n  border: 1px solid #ddd;\n  border-radius: 4px;\n  margin-bottom: 30px;\n}\n\n.race-track {\n  position: relative;\n  width: 100%;\n  height: 200px;\n  margin-top: 20px;\n}\n\n.lanes {\n  position: relative;\n  width: 100%;\n  height: 100%;\n}\n\n.lane {\n  position: absolute;\n  top: 0;\n  width: calc(100% / 10);\n  height: 100%;\n  display: flex;\n  flex-direction: column;\n}\n\n.horse {\n  position: absolute;\n  height: 50px;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  color: white;\n  font-weight: bold;\n  transition: left linear;\n}\n\n.horse img {\n  width: 50px;\n  height: auto;\n  margin-right: 5px;\n}\n\n.finish-line {\n  position: relative;\n  width: 100%;\n  height: 1px;\n  background-color: red;\n  margin: 10px 0;\n}\n</style>\n"],"mappings":"AAyBA,SAASA,QAAQ,EAAEC,UAAS,QAAS,MAAM;AAE3C,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,QAAQ,EAAE;IACR,GAAGH,QAAQ,CAAC,CAAC,cAAc,CAAC;EAC9B,CAAC;EACDI,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,cAAc,CAAC,CAAC;IACrB,IAAI,CAACC,SAAS,CAAC,CAAC;EAClB,CAAC;EACDC,OAAO,EAAE;IACP,GAAGN,UAAU,CAAC,CAAC,gBAAgB,EAAE,WAAW,CAAC,CAAC;IAC9CK,SAASA,CAAA,EAAG;MACV,IAAI,CAACE,YAAY,CAACC,OAAO,CAAEC,IAAI,IAAK;QAClCA,IAAI,CAACC,MAAM,CAACF,OAAO,CAAEG,KAAK,IAAK;UAC7BA,KAAK,CAACC,KAAI,GAAI,IAAI,CAACC,cAAc,CAACF,KAAK,CAACG,SAAS,CAAC;UAClDH,KAAK,CAACI,QAAO,GAAI,IAAI,CAACC,kBAAkB,CAAC,CAAC;UAC1CC,UAAU,CAAC,MAAM;YACfN,KAAK,CAACI,QAAO,GAAI,GAAG;UACtB,CAAC,EAAE,GAAG,CAAC;QACT,CAAC,CAAC;MACJ,CAAC,CAAC;IACJ,CAAC;IACDF,cAAcA,CAACC,SAAS,EAAE;MACxB;MACA,OAAO,IAAIA,SAAS,EAAE;IACxB,CAAC;IACDE,kBAAkBA,CAAA,EAAG;MACnB;MACA,OAAO,CAAC;IACV;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}