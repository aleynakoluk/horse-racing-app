{"ast":null,"code":"import { mapState } from 'vuex';\nimport RaceSchedule from './RaceSchedule.vue'; // Dosya yolu doğru şekilde ayarlandı\nimport RaceResults from './RaceResults.vue'; // Dosya yolu doğru şekilde ayarlandı\n\nexport default {\n  components: {\n    RaceSchedule,\n    RaceResults\n  },\n  computed: {\n    ...mapState(['showSchedule', 'showResults'])\n  },\n  methods: {\n    handleGenerateScheduleClick() {\n      // Yarış programını oluştur\n      const schedule = generateRaceSchedule(this.$store.state.horses, 6); // 6 yarıştan oluşan bir program oluştur\n      this.$store.commit('setRaceSchedule', schedule);\n      this.$store.commit('setShowSchedule', true);\n      this.$store.commit('setShowResults', false);\n    },\n    handleStartRaceClick() {\n      // Yarışları başlat\n      const schedule = this.$store.state.raceSchedule;\n      if (schedule.length === 0) {\n        alert('Please generate a race schedule first.');\n        return;\n      }\n      this.$store.commit('clearRaceResults');\n      this.runRaces(schedule, 0);\n    },\n    runRaces(schedule, index) {\n      if (index >= schedule.length) {\n        // Tüm yarışlar tamamlandı, sonuçları göster\n        this.$store.commit('setShowSchedule', false);\n        this.$store.commit('setShowResults', true);\n        return;\n      }\n      const race = schedule[index];\n      setTimeout(() => {\n        race.horses.forEach(horse => {\n          const newPosition = horse.position + Math.random() * 10;\n          this.$store.commit('updateHorsePosition', {\n            horseId: horse.id,\n            position: newPosition\n          });\n        });\n        const winner = race.horses.reduce((prev, current) => prev.position > current.position ? prev : current);\n        const result = `Winner: Horse ${winner.id}`;\n        this.$store.commit('addRaceResult', result);\n        this.runRaces(schedule, index + 1);\n      }, 5000); // Her yarışı 5 saniye arayla başlatır\n    }\n  }\n};","map":{"version":3,"names":["mapState","RaceSchedule","RaceResults","components","computed","methods","handleGenerateScheduleClick","schedule","generateRaceSchedule","$store","state","horses","commit","handleStartRaceClick","raceSchedule","length","alert","runRaces","index","race","setTimeout","forEach","horse","newPosition","position","Math","random","horseId","id","winner","reduce","prev","current","result"],"sources":["/Users/aleynakoluk/Desktop/horse-racing-game/src/components/ControlButtons.vue"],"sourcesContent":["<template>\n  <div>\n    <div class=\"control-buttons\">\n      <button @click=\"handleGenerateScheduleClick\" class=\"btn\">GENERATE PROGRAM</button>\n      <button @click=\"handleStartRaceClick\" class=\"btn\">START/PAUSE</button>\n    </div>\n    <div v-if=\"showSchedule\">\n      <race-schedule></race-schedule>\n    </div>\n    <div v-if=\"showResults\">\n      <race-results></race-results>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { mapState } from 'vuex';\nimport RaceSchedule from './RaceSchedule.vue'; // Dosya yolu doğru şekilde ayarlandı\nimport RaceResults from './RaceResults.vue'; // Dosya yolu doğru şekilde ayarlandı\n\nexport default {\n  components: {\n    RaceSchedule,\n    RaceResults\n  },\n  computed: {\n    ...mapState(['showSchedule', 'showResults'])\n  },\n  methods: {\n    handleGenerateScheduleClick() {\n      // Yarış programını oluştur\n      const schedule = generateRaceSchedule(this.$store.state.horses, 6); // 6 yarıştan oluşan bir program oluştur\n      this.$store.commit('setRaceSchedule', schedule);\n      this.$store.commit('setShowSchedule', true);\n      this.$store.commit('setShowResults', false);\n    },\n    handleStartRaceClick() {\n      // Yarışları başlat\n      const schedule = this.$store.state.raceSchedule;\n      if (schedule.length === 0) {\n        alert('Please generate a race schedule first.');\n        return;\n      }\n      this.$store.commit('clearRaceResults');\n      this.runRaces(schedule, 0);\n    },\n    runRaces(schedule, index) {\n      if (index >= schedule.length) {\n        // Tüm yarışlar tamamlandı, sonuçları göster\n        this.$store.commit('setShowSchedule', false);\n        this.$store.commit('setShowResults', true);\n        return;\n      }\n      const race = schedule[index];\n      setTimeout(() => {\n        race.horses.forEach(horse => {\n          const newPosition = horse.position + Math.random() * 10;\n          this.$store.commit('updateHorsePosition', { horseId: horse.id, position: newPosition });\n        });\n        const winner = race.horses.reduce((prev, current) => (prev.position > current.position) ? prev : current);\n        const result = `Winner: Horse ${winner.id}`;\n        this.$store.commit('addRaceResult', result);\n        this.runRaces(schedule, index + 1);\n      }, 5000); // Her yarışı 5 saniye arayla başlatır\n    }\n  }\n};\n</script>\n\n<style scoped>\n.header {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  margin-bottom: 20px;\n  background-color: #FF9E8F;\n  padding: 10px;\n  width: 100vw; /* Sayfanın tam genişliğini alacak şekilde ayarlandı */\n}\n\n.title {\n  font-size: 24px;\n  font-weight: bold;\n  color: #333;\n  width: 100%; /* Başlık genişliğini tam ekran genişliği olarak ayarladı */\n}\n\n.control-buttons {\n  display: flex;\n  align-items: center;\n  width: 100%; /* Kontrol düğmelerinin genişliğini tam ekran genişliği olarak ayarladı */\n  justify-content: flex-end; /* Sağa doğru hizalama */\n}\n\n.btn {\n  margin: 0 10px;\n  padding: 10px 20px;\n  color: black;\n  background-color:  #d8d8d8fe;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  font-size: 14px;\n  transition: background-color 0.3s ease;\n}\n\n.btn:hover {\n  background-color: #969393;\n}\n\n/* Tablet ve daha büyük cihazlar için */\n@media (min-width: 600px) {\n  .header {\n    height: 60px;\n  }\n\n  .title {\n    font-size: 28px;\n  }\n\n  .btn {\n    margin: 0 15px;\n    padding: 10px 25px;\n    font-size: 16px;\n  }\n}\n\n/* Mobil cihazlar için */\n@media (max-width: 599px) {\n  .header {\n    flex-direction: column;\n    align-items: flex-start;\n    height: auto;\n  }\n\n  .title {\n    font-size: 20px;\n    margin-bottom: 10px;\n  }\n\n  .control-buttons {\n    flex-direction: column;\n    align-items: stretch;\n    width: 100%;\n    justify-content: flex-start; /* Mobilde düğmelerin üst üste gelmesi için */\n    margin-right: 5px;\n  }\n\n  .btn {\n    margin: 5px 0;\n    width: 100%;\n    text-align: right; /* Mobilde düğmeleri sağa doğru hizala */\n  }\n}\n</style>\n"],"mappings":"AAgBA,SAASA,QAAO,QAAS,MAAM;AAC/B,OAAOC,YAAW,MAAO,oBAAoB,EAAE;AAC/C,OAAOC,WAAU,MAAO,mBAAmB,EAAE;;AAE7C,eAAe;EACbC,UAAU,EAAE;IACVF,YAAY;IACZC;EACF,CAAC;EACDE,QAAQ,EAAE;IACR,GAAGJ,QAAQ,CAAC,CAAC,cAAc,EAAE,aAAa,CAAC;EAC7C,CAAC;EACDK,OAAO,EAAE;IACPC,2BAA2BA,CAAA,EAAG;MAC5B;MACA,MAAMC,QAAO,GAAIC,oBAAoB,CAAC,IAAI,CAACC,MAAM,CAACC,KAAK,CAACC,MAAM,EAAE,CAAC,CAAC,EAAE;MACpE,IAAI,CAACF,MAAM,CAACG,MAAM,CAAC,iBAAiB,EAAEL,QAAQ,CAAC;MAC/C,IAAI,CAACE,MAAM,CAACG,MAAM,CAAC,iBAAiB,EAAE,IAAI,CAAC;MAC3C,IAAI,CAACH,MAAM,CAACG,MAAM,CAAC,gBAAgB,EAAE,KAAK,CAAC;IAC7C,CAAC;IACDC,oBAAoBA,CAAA,EAAG;MACrB;MACA,MAAMN,QAAO,GAAI,IAAI,CAACE,MAAM,CAACC,KAAK,CAACI,YAAY;MAC/C,IAAIP,QAAQ,CAACQ,MAAK,KAAM,CAAC,EAAE;QACzBC,KAAK,CAAC,wCAAwC,CAAC;QAC/C;MACF;MACA,IAAI,CAACP,MAAM,CAACG,MAAM,CAAC,kBAAkB,CAAC;MACtC,IAAI,CAACK,QAAQ,CAACV,QAAQ,EAAE,CAAC,CAAC;IAC5B,CAAC;IACDU,QAAQA,CAACV,QAAQ,EAAEW,KAAK,EAAE;MACxB,IAAIA,KAAI,IAAKX,QAAQ,CAACQ,MAAM,EAAE;QAC5B;QACA,IAAI,CAACN,MAAM,CAACG,MAAM,CAAC,iBAAiB,EAAE,KAAK,CAAC;QAC5C,IAAI,CAACH,MAAM,CAACG,MAAM,CAAC,gBAAgB,EAAE,IAAI,CAAC;QAC1C;MACF;MACA,MAAMO,IAAG,GAAIZ,QAAQ,CAACW,KAAK,CAAC;MAC5BE,UAAU,CAAC,MAAM;QACfD,IAAI,CAACR,MAAM,CAACU,OAAO,CAACC,KAAI,IAAK;UAC3B,MAAMC,WAAU,GAAID,KAAK,CAACE,QAAO,GAAIC,IAAI,CAACC,MAAM,CAAC,IAAI,EAAE;UACvD,IAAI,CAACjB,MAAM,CAACG,MAAM,CAAC,qBAAqB,EAAE;YAAEe,OAAO,EAAEL,KAAK,CAACM,EAAE;YAAEJ,QAAQ,EAAED;UAAY,CAAC,CAAC;QACzF,CAAC,CAAC;QACF,MAAMM,M