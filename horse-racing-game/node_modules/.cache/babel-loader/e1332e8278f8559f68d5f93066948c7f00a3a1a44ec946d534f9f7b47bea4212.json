rder-radius: 6px;\n  border: 1px solid #333;\n}\n\n.table-title {\n  background-color: blue;\n  color: black;\n  border: 1px solid #333;\n  text-align: center;\n  padding: 9px;\n  border-top-left-radius: 4px;\n  border-top-right-radius: 4px;\n}\n\n.race-info {\n  text-align: center;\n}\n\n.table-container {\n  text-align: right;\n  max-height: 728px;\n  overflow-y: auto;\n  position: relative;\n}\n\ntable {\n  width: 100%;\n  border-collapse: collapse;\n  background-color: #fff;\n  text-align: center;\n}\n\nth, td {\n  text-align: center;\n  border: 1px solid #ddd;\n}\n\nth {\n  background-color: #f2f2f2;\n}\n\nh3 {\n  background-color: #f08080;\n  color: black;\n  margin: 0;\n  position: sticky;\n  top: 0;\n  z-index: 1;\n}\n</style>\n"],"mappings":"AAiDA,SAASA,UAAS,QAAS,MAAM;AAEjC,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,gBAAgB,EAAE;IACpB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,YAAYA,CAAA,EAAG;MACb,OAAO,IAAI,CAACC,MAAM,CAACC,KAAK,CAACF,YAAY;IACvC;EACF,CAAC;EACDG,OAAO,EAAE;IACP,GAAGP,UAAU,CAAC,CAAC,gBAAgB,EAAE,WAAW,EAAE,qBAAqB,CAAC,CAAC;IACrE,MAAMQ,2BAA2BA,CAAA,EAAG;MAClC,MAAM,IAAI,CAACC,cAAc,CAAC,CAAC;MAC3B,IAAI,CAACP,gBAAe,GAAI,IAAI;IAC9B,CAAC;IACDQ,oBAAoBA,CAAA,EAAG;MACrB,IAAI,CAACC,mBAAmB,CAAC,CAAC;MAC1B,IAAI,CAACC,SAAS,CAAC,CAAC;IAClB;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}